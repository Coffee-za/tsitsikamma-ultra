---
import braaingImage from '../assets/Braaing.webp';
import kevinJohnnyImage from '../assets/KevinJohnny.webp';
import runnerHeadLampImage from '../assets/RunnerWithHeadLamp.webp';
import smilingImage from '../assets/Smiling.webp';

const galleryImages = [
  {
    src: braaingImage.src,
    alt: 'Post-race braai celebration'
  },
  {
    src: kevinJohnnyImage.src,
    alt: 'Kevin and Johnny at the race'
  },
  {
    src: runnerHeadLampImage.src,
    alt: 'Trail runner with headlamp'
  },
  {
    src: smilingImage.src,
    alt: 'Happy trail runner'
  }
];
---

<section class="gallery">
	<div class="container">
		<div class="gallery-grid">
			{galleryImages.map((image, index) => (
				<div class="gallery-item" style={`animation-delay: ${index * 0.1}s`}>
					<img src={image.src} alt={image.alt} loading="lazy" />
					<div class="gallery-overlay">
						<div class="overlay-content">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
							</svg>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.gallery {
		padding: 4rem 0;
		background: linear-gradient(180deg, var(--background-color) 0%, rgba(34, 51, 59, 0.8) 100%);
		overflow: hidden;
	}

	.gallery-grid {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		align-items: stretch;
	}

	.gallery-item {
		position: relative;
		flex: 1;
		aspect-ratio: 2/3;
		max-width: 280px;
		border-radius: 12px;
		overflow: hidden;
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 0.8s ease-out forwards;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.gallery-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(205, 213, 174, 0.8) 0%, rgba(143, 188, 143, 0.8) 100%);
		opacity: 0;
		pointer-events: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.overlay-content {
		color: var(--background-color);
	}


	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.gallery {
			padding: 3rem 0;
		}

		.gallery-grid {
			flex-wrap: wrap;
			gap: 1rem;
			justify-content: center;
		}

		.gallery-item {
			flex: 0 1 calc(50% - 0.5rem);
			max-width: 200px;
		}
	}

	@media (max-width: 480px) {
		.gallery {
			padding: 2rem 0;
		}

		.gallery-grid {
			flex-direction: column;
			align-items: center;
			gap: 1rem;
		}

		.gallery-item {
			flex: none;
			width: 100%;
			max-width: 250px;
		}
	}
</style>