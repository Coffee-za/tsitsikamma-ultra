---
import braaingImage from '../assets/Braaing.webp';
import kevinJohnnyImage from '../assets/KevinJohnny.webp';
import runnerHeadLampImage from '../assets/RunnerWithHeadLamp.webp';
import smilingImage from '../assets/Smiling.webp';

const galleryImages = [
  {
    src: braaingImage.src,
    alt: 'Post-race braai celebration'
  },
  {
    src: kevinJohnnyImage.src,
    alt: 'Kevin and Johnny at the race'
  },
  {
    src: runnerHeadLampImage.src,
    alt: 'Trail runner with headlamp'
  },
  {
    src: smilingImage.src,
    alt: 'Happy trail runner'
  }
];
---

<section class="gallery">
	<div class="container">
		<div class="gallery-grid">
			{galleryImages.map((image, index) => (
				<div class="gallery-item" style={`animation-delay: ${index * 0.1}s`}>
					<img src={image.src} alt={image.alt} loading="lazy" />
					<div class="gallery-overlay">
						<div class="overlay-content">
							<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
							</svg>
						</div>
					</div>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.gallery {
		padding: 4rem 0;
		background: linear-gradient(180deg, var(--background-color) 0%, rgba(34, 51, 59, 0.8) 100%);
		overflow: hidden;
	}

	.gallery-grid {
		display: flex;
		gap: 1.5rem;
		justify-content: center;
		align-items: stretch;
	}

	/* Mobile carousel styles are defined in the media query below */

	.gallery-item {
		position: relative;
		flex: 1;
		aspect-ratio: 2/3;
		max-width: 280px;
		border-radius: 12px;
		overflow: hidden;
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInUp 0.8s ease-out forwards;
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
	}

	.gallery-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.gallery-overlay {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, rgba(205, 213, 174, 0.8) 0%, rgba(143, 188, 143, 0.8) 100%);
		opacity: 0;
		pointer-events: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.overlay-content {
		color: var(--background-color);
	}


	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.gallery {
			padding: 3rem 0;
			display: none;
		}

		.gallery-grid {
			flex-wrap: nowrap;
			gap: 1rem;
			overflow: hidden; /* hide scrollbar for continuous slideshow */
			/* disable scroll snap; continuous animation via JS */
		}
		.gallery-grid::-webkit-scrollbar { display: none; } /* webkit */

		.gallery-item {
			flex: 0 0 80%;
			max-width: none;
			/* scroll-snap removed for continuous motion */
		}

	}

	@media (max-width: 480px) {
		.gallery {
			padding: 2rem 0;
			display: none;
		}

		.gallery-item { flex-basis: 85%; }
	}
</style>

<script>
	// @ts-nocheck
	function initGalleryCarousel() {
		const gridEl = document.querySelector('.gallery .gallery-grid');
		if (!(gridEl instanceof HTMLElement)) return;
		let items = Array.from(gridEl.querySelectorAll('.gallery-item'));
		if (items.length === 0) return;

		const getGapPX = () => parseFloat(getComputedStyle(gridEl).gap || '0px');

		const isMobile = () => window.matchMedia('(max-width: 768px)').matches;
		const atEnd = () => gridEl.scrollLeft + gridEl.clientWidth >= gridEl.scrollWidth - 4;

		// Continuous slow auto-scroll on mobile using rAF
		let rafId;
		const pixelsPerSecond = 30; // slow
		let lastTs = 0;

		const scrollLeftByItem = () => {
			const firstItem = items[0];
			const itemWidth = firstItem.getBoundingClientRect().width + getGapPX();
			gridEl.scrollBy({ left: -itemWidth, behavior: 'smooth' });
		};

		const scrollRightByItem = () => {
			const firstItem = items[0];
			const itemWidth = firstItem.getBoundingClientRect().width + getGapPX();
			gridEl.scrollBy({ left: itemWidth, behavior: 'smooth' });
		};

		function step(ts) {
			if (!isMobile()) {
				lastTs = ts;
				rafId = requestAnimationFrame(step);
				return;
			}
			const dt = lastTs ? (ts - lastTs) / 1000 : 0;
			lastTs = ts;
			const dx = pixelsPerSecond * dt;
			const nextLeft = gridEl.scrollLeft + dx;
			if (nextLeft + gridEl.clientWidth >= gridEl.scrollWidth - 1) {
				gridEl.scrollLeft = 0; // loop to start
			} else {
				gridEl.scrollLeft = nextLeft;
			}
			rafId = requestAnimationFrame(step);
		}

		function startAuto() {
			if (rafId) cancelAnimationFrame(rafId);
			lastTs = 0;
			rafId = requestAnimationFrame(step);
		}

		window.addEventListener('resize', () => { startAuto(); });
		startAuto();
	}

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', initGalleryCarousel);
	} else {
		initGalleryCarousel();
	}
</script>