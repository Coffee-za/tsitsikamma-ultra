---
export interface Props {
	title: string;
	description?: string;
	image?: string; // path under /public or absolute URL
	noindex?: boolean;
	ogType?: string; // website, article, etc.
}

const { title, description, image, noindex, ogType } = Astro.props;
const metaDescription = description ?? "Tsitsikamma Ultra - Premier trail running event through South Africa's stunning Garden Route. Register now for an unforgettable ultra running experience.";
const robots = noindex ? 'noindex, nofollow' : 'index, follow';
const canonicalUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
const ogImageUrl = Astro.site ? new URL(image ?? '/Hero Banner_webp.webp', Astro.site) : null;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={metaDescription} />
		<meta name="robots" content={robots} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		{canonicalUrl && (
			<link rel="canonical" href={canonicalUrl.href} />
		)}

		<!-- Open Graph -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={metaDescription} />
		{canonicalUrl && (
			<meta property="og:url" content={canonicalUrl.href} />
		)}
		<meta property="og:type" content={ogType ?? 'website'} />
		{ogImageUrl && (
			<meta property="og:image" content={ogImageUrl.href} />
		)}

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={metaDescription} />
		{ogImageUrl && (
			<meta name="twitter:image" content={ogImageUrl.href} />
		)}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=EB+Garamond:wght@400;500;600;700&display=swap" rel="stylesheet">
		{import.meta.env.PROD && (
			<script defer src="https://analytics.plettpixels.com/script.js" data-website-id="cbc06780-929f-42aa-bea3-d72c61381511"></script>
		)}
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--primary-color: #CDD5AE;
		--background-color: #22333B;
		--text-primary: #FFFFFF;
		--text-secondary: #E5E7EB;
		--text-muted: #9CA3AF;
		--accent-color: #8FBC8F;
		--card-background: rgba(255, 255, 255, 0.05);
		--border-color: rgba(205, 213, 174, 0.2);
		--success-color: #10B981;
		--warning-color: #F59E0B;
		--danger-color: #EF4444;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		min-height: 100vh;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
		line-height: 1.6;
		background-color: var(--background-color);
		color: var(--text-primary);
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		font-family: 'EB Garamond', serif !important;
		font-weight: 600 !important;
		line-height: 1.2;
	}

	p {
		margin: 0;
		line-height: 1.5;
	}

	a {
		color: var(--primary-color);
		text-decoration: none;
		transition: color 0.2s ease;
	}

	a:hover {
		color: var(--accent-color);
	}

	button {
		font-family: inherit;
		font-size: inherit;
		border: none;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 1rem 2rem;
		border-radius: 8px;
		font-weight: 500;
		text-decoration: none;
		transition: all 0.2s ease;
		border: 2px solid transparent;
	}

	.btn-primary {
		background-color: var(--primary-color);
		color: var(--background-color);
		box-shadow: 0 4px 12px rgba(205, 213, 174, 0.3);
	}

	.btn-primary:hover {
		background-color: var(--accent-color);
		color: var(--background-color);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(205, 213, 174, 0.4);
	}

	.btn-outline {
		background-color: transparent;
		color: var(--primary-color);
		border-color: var(--primary-color);
	}

	.btn-outline:hover {
		background-color: var(--primary-color);
		color: var(--background-color);
	}

	.section {
		padding: 5rem 0;
	}

	.section-title {
		font-size: 2.5rem;
		text-align: center;
		margin-bottom: 3rem;
		color: var(--primary-color);
	}

	.card {
		background: var(--card-background);
		backdrop-filter: blur(10px);
		border: 1px solid var(--border-color);
		border-radius: 12px;
		padding: 2rem;
		transition: all 0.3s ease;
	}

	.card:hover {
		transform: translateY(-4px);
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
		border-color: var(--primary-color);
	}

	@media (max-width: 768px) {
		.section {
			padding: 3rem 0;
		}
		
		.section-title {
			font-size: 2rem;
			margin-bottom: 2rem;
		}
		
		.btn {
			padding: 0.875rem 1.5rem;
		}
	}
</style>