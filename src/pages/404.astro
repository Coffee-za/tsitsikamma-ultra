---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found | Tsitsikamma Ultra" noindex>
	<Header />
	<main>
		<section class="section">
			<div class="container div-404">
				<h1 class="section-title">404 - Page Not Found</h1>
				<p style="margin: 1rem 0 2rem; color: var(--text-secondary);">
					Sorry, you no longer on the marked route, please follow the signs to get back on track!
				</p>
				<a href="/" class="btn btn-primary">Back to Home</a>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.section-title {
		margin-top: 3rem;
	}

	.div-404 {
		text-align: center;
	}
</style>